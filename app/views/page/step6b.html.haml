#step6b.box.red
  .option_position
    .question= t 'step6b.question'
    %br/
    %table
      %tbody
        %tr
          %td
            %label.label_radio{:for => t('step6b.option1', locale: :en)}
              %input{:id => t('step6b.option1', locale: :en), :name => "step6b", :type => "radio", :value => t('step6b.option1', locale: :en)}/
              %br/
              %strong= t 'step6b.option1'
          %td
            %label.label_radio{:for => t('step6b.option2', locale: :en)}
              %input{:id => t('step6b.option2', locale: :en), :name => "step6b", :type => "radio", :value => t('step6b.option2', locale: :en)}/
              %br/
              %strong= t 'step6b.option2'
          %td
            %label.label_radio{:for => t('step6b.option3', locale: :en)}
              %input{:id => t('step6b.option3', locale: :en), :name => "step6b", :type => "radio", :value => t('step6b.option3', locale: :en)}/
              %br/
              %strong= t 'step6b.option3'
        %tr
          %td#input_response{:colspan => "3"}
            %h5= t 'step6b.text_answer'
            %textarea#kv_text
  .error
    %strong= t 'misc.forgot'
    = t 'step6b.error'
  %a.button.next= t 'misc.next'