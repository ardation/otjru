    I18n.step6_error_university = "<%=t :step6_error_university %>";
    I18n.step6_error_faculty = "<%=t :step6_error_faculty %>";
		I18n.step6_error_year = "<%=t :step6_error_year %>";
	</script>
	<%= stylesheet_link_tag "style" %>
	<%= stylesheet_link_tag "style.#{I18n.locale}" %>

<% end %>

