- content_for :head do
  %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
  %meta{charset: "utf-8"}/
  %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
  %meta{content: "user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0", name: "viewport"}/
  %meta{content: "yes", name: "apple-mobile-web-app-capable"}/
  %meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}/
  %link{href: asset_path('logo.png'), rel: "apple-touch-icon"}/
  %link{href: asset_path('favicon.png'), rel: "icon", type: "image/png"}/
  %title
    = t 'misc.otj'
    \- #{@outreach.org_name}
  :javascript
    var I18n = {};
        I18n.locale = "#{I18n.locale}";
        I18n.step6_error_fname = "#{t 'details.name.first_name.error'}";
        I18n.step6_error_lname = "#{t :'details.name.last_name.error'}";
        I18n.step6_error_gender = "#{t 'details.gender.error'}";
        I18n.step6_error_mobile = "#{t 'details.mobile.error'}";
        I18n.step6_error_email = "#{t 'details.email.error'}";
        I18n.step6_error_university = "#{t 'details.university.error'}";
        I18n.step6_error_faculty = "#{t 'details.faculty.error'}";
        I18n.step6_error_year = "#{t 'details.year.error'}";
  = stylesheet_link_tag "style"
  = stylesheet_link_tag "style.#{I18n.locale}"
#container
  #upper-foreground
    %div
  #main{role: "main"}
    %div
      %div
  #lower-foreground
  #footer
    %a#reset.clickable{href: "step1"}= t 'misc.reset'
    - unless @outreach.english_only?
      %a#language.clickable{"data-bypass" => "", href: "/#{t 'misc.switch_tag'}"}= t 'misc.switch'
    %a#terms.clickable{href: "terms"}= t 'misc.terms_and_conditions'
%script{src: "http://maps.google.com/maps/api/js?libraries=places&sensor=true&language=#{I18n.locale}", type: "text/javascript"}
%script{src: asset_path('config.js'), type: "text/javascript"}